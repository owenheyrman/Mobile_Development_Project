<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Herexamen_owen_heyrman"
        tools:targetApi="31">
        <activity
            android:name=".AdminDashboardActivity"
            android:exported="false"
            android:label="@string/title_activity_admin_dashboard"
            android:theme="@style/Theme.Herexamen_owen_heyrman" />
        <activity
            android:name=".UserFlowActivity"
            android:exported="false"
            android:label="@string/title_activity_user_flow"
            android:theme="@style/Theme.Herexamen_owen_heyrman" />
        <activity
            android:name=".AdminLoginActivity"
            android:exported="false"
            android:label="@string/title_activity_admin_login"
            android:theme="@style/Theme.Herexamen_owen_heyrman" />
        <activity
            android:name=".ExamDetailsActivity"
            android:exported="false"
            android:label="@string/title_activity_exam_details"
            android:theme="@style/Theme.Herexamen_owen_heyrman" />
        <activity
            android:name=".UserListActivity"
            android:exported="false"
            android:label="@string/title_activity_user_list"
            android:theme="@style/Theme.Herexamen_owen_heyrman" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Herexamen_owen_heyrman">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>